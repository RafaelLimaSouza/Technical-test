{
    "compilerOptions": {
      "target": "ES2017",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@infra/*": ["./src/infra/*"],
        "@shared/*": ["./src/shared/*"],
        "@application/*": ["./src/application/*"]
      },
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    }
  }
